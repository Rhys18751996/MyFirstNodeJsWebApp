<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Navbar</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .dropdown-menu {
      display: none;
    }
    .dropdown-menu.show {
      display: block;
    }
  </style>
</head>
<body>
  <nav class="bg-gray-800 py-2">
    <div class="container mx-auto flex items-center justify-between">
      <!-- Logo and Toggle Button for Mobile -->
      <div class="flex items-center">
        <a href="/" class="text-white text-2xl font-bold">EcoXChange</a>
        <button id="mobile-menu-button" class="ml-3 text-white focus:outline-none lg:hidden">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- Navbar Links -->
      <div class="hidden lg:flex lg:space-x-4">
        <a href="/" class="text-white hover:bg-gray-700 px-3 py-2 rounded">Index</a>
        <a href="/home" class="text-white hover:bg-gray-700 px-3 py-2 rounded">Home</a>
        <a href="/user" class="text-white hover:bg-gray-700 px-3 py-2 rounded">User</a>
        <% if (typeof user !== 'undefined') { %>
          <% if (user) { %>
            <a href="/user/logout" class="text-white hover:bg-gray-700 px-3 py-2 rounded">Logout</a>
          <% } else { %>
            <a href="/user/login" class="text-white hover:bg-gray-700 px-3 py-2 rounded">Login</a>
            <a href="/user/register" class="text-white hover:bg-gray-700 px-3 py-2 rounded">Register</a>
          <% } %>
        <% } %>
      </div>
      
      <!-- Dropdown Menu for Mobile -->
      <div id="mobile-menu" class="dropdown-menu absolute right-0 mt-2 w-48 bg-gray-800 text-white rounded-lg shadow-lg lg:hidden">
        <a href="/" class="block px-4 py-2 hover:bg-gray-700">Index</a>
        <a href="/home" class="block px-4 py-2 hover:bg-gray-700">Home</a>
        <a href="/user" class="block px-4 py-2 hover:bg-gray-700">User</a>
        <% if (typeof user !== 'undefined') { %>
          <% if (user) { %>
            <a href="/user/logout" class="block px-4 py-2 hover:bg-gray-700">Logout</a>
          <% } else { %>
            <a href="/user/login" class="block px-4 py-2 hover:bg-gray-700">Login</a>
            <a href="/user/register" class="block px-4 py-2 hover:bg-gray-700">Register</a>
          <% } %>
        <% } %>
      </div>
    </div>
  </nav>

  <script>
    // Toggle dropdown menu visibility
    const menuButton = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');

    menuButton.addEventListener('click', () => {
      menu.classList.toggle('show');
    });
  </script>
</body>
</html>